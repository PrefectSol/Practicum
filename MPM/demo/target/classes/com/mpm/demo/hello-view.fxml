<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="VboxContainer" alignment="CENTER" prefHeight="605.0" prefWidth="832.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mpm.demo.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <AnchorPane prefHeight="504.0" prefWidth="792.0">
      <AnchorPane layoutX="14.0" layoutY="230.0" prefHeight="375.0" prefWidth="349.0">
         <Button layoutX="14.0" layoutY="228.0" mnemonicParsing="false" onAction="#onGetAngleClick" text="Вычислить значение угла">
            <font>
               <Font size="15.0" />
            </font>
         </Button>
         <RadioButton fx:id="cosRB" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" selected="true" text="Cos">
            <font>
               <Font size="15.0" />
            </font>
            <toggleGroup>
               <ToggleGroup fx:id="AngleFunctions" />
            </toggleGroup>
         </RadioButton>
         <RadioButton fx:id="sinRB" layoutX="14.0" layoutY="40.0" mnemonicParsing="false" text="Sin" toggleGroup="$AngleFunctions">
            <font>
               <Font size="15.0" />
            </font>
         </RadioButton>
         <RadioButton fx:id="thRB" layoutX="14.0" layoutY="68.0" mnemonicParsing="false" text="Tg" toggleGroup="$AngleFunctions">
            <font>
               <Font size="15.0" />
            </font>
         </RadioButton>
         <RadioButton fx:id="cthRB" layoutX="14.0" layoutY="96.0" mnemonicParsing="false" text="Cth" toggleGroup="$AngleFunctions">
            <font>
               <Font size="15.0" />
            </font>
         </RadioButton>
         <TextField fx:id="angleInput" layoutX="14.0" layoutY="175.0" />
         <Label layoutX="14.0" layoutY="148.0" text="Угол в градусах:">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
         <Label fx:id="angleValue" layoutX="14.0" layoutY="266.0" prefHeight="21.0" prefWidth="212.0">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
      </AnchorPane>
      <AnchorPane layoutX="12.0" layoutY="14.0" prefHeight="33.0" prefWidth="778.0">
         <Button layoutX="334.0" layoutY="1.0" mnemonicParsing="false" onAction="#onSwitchTheme" text="SwitchTheme">
            <font>
               <Font size="15.0" />
            </font>
         </Button>
         <Button layoutX="696.0" layoutY="1.0" mnemonicParsing="false" onAction="#onFunctionClick" text="Function">
            <font>
               <Font size="15.0" />
            </font>
         </Button>
         <Button layoutY="1.0" mnemonicParsing="false" onAction="#onIntegralClick" text="Integral">
            <font>
               <Font size="15.0" />
            </font>
         </Button>
      </AnchorPane>
   </AnchorPane>
</VBox>
